# upstream
just cross use khue	https://github.com/khuedoan/homelab
just cross use bill	https://github.com/billimek/k8s-gitops

# stash?
# repo_is_clean || say "There are uncommitted changes in the repository. Stash them first." 1

# cross patches
# ex: origin:path/remote/dir [local/path/to/dir] [branch]
just cross patch khue:master:/metal       deploy/metal
just cross patch bill:/setup/flux         # setup/flux

export CROSS_FETCH_DEPENDENCIES=${CROSS_FETCH_DEPENDENCIES:-false}

